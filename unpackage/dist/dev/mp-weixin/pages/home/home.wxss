/* 水平间距 */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
  padding-bottom: 50px;
  /* 为系统tabBar预留空间 */
}
.status-bar {
  height: var(--status-bar-height);
  background-color: #ffffff;
}
.search-box {
  background-color: #ffffff;
  padding: 10px 15px;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
}
.search-bar {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 20px;
  padding: 8px 15px;
}
.search-bar input {
  flex: 1;
  font-size: 14px;
  margin-left: 8px;
}
.content-area {
  flex: 1;
  overflow: hidden;
}
.banner {
  height: 150px;
}
.banner .banner-item {
  width: 100%;
  height: 100%;
  background-color: #e0e0e0;
}
.category-nav {
  display: flex;
  padding: 15px;
  background-color: #ffffff;
  margin: 10px 0;
}
.category-nav .category-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.category-nav .category-item .category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.category-nav .category-item .category-text {
  font-size: 24rpx;
  color: #333;
}
.recommend-section {
  background-color: #ffffff;
  padding: 30rpx;
}
.recommend-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.recommend-section .content-grid {
  display: flex;
  flex-wrap: wrap;
}
.recommend-section .content-grid .grid-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}

