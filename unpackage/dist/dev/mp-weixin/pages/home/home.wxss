/* 水平间距 */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
  padding-bottom: 50px;
  /* 为系统tabBar预留空间 */
}
.status-bar {
  height: var(--status-bar-height);
  background-color: #ffffff;
}
.search-box {
  background-color: #ffffff;
  padding: 10px 15px;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
}
.search-bar {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 20px;
  padding: 8px 15px;
}
.search-bar .search-icon {
  width: 20px;
  height: 20px;
  margin-right: 8px;
}
.search-bar input {
  flex: 1;
  font-size: 14px;
}
.content-area {
  flex: 1;
  overflow: hidden;
}
.banner {
  height: 150px;
}
.banner .banner-item {
  width: 100%;
  height: 100%;
  background-color: #e0e0e0;
}
.category-nav {
  display: flex;
  padding: 15px;
  background-color: #ffffff;
  margin: 10px 0;
}
.category-nav .category-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.category-nav .category-item .category-icon {
  width: 40px;
  height: 40px;
  background-color: #e0e0e0;
  border-radius: 50%;
  margin-bottom: 5px;
}
.category-nav .category-item .category-text {
  font-size: 12px;
  color: #333;
}
.recommend-section {
  background-color: #ffffff;
  padding: 15px;
}
.recommend-section .section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 15px;
}
.recommend-section .content-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
}
.recommend-section .content-grid .content-item {
  background-color: #ffffff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}
.recommend-section .content-grid .content-item .content-image-wrapper {
  position: relative;
  height: 120px;
}
.recommend-section .content-grid .content-item .content-image-wrapper .content-image {
  width: 100%;
  height: 100%;
  background-color: #e0e0e0;
}
.recommend-section .content-grid .content-item .content-image-wrapper .price-tag {
  position: absolute;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  padding: 4rpx 12rpx;
  border-radius: 0 8rpx 0 0;
  display: flex;
  align-items: center;
}
.recommend-section .content-grid .content-item .content-image-wrapper .price-symbol {
  color: #fff;
  font-size: 24rpx;
  margin-right: 2rpx;
}
.recommend-section .content-grid .content-item .content-image-wrapper .price-value {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}
.recommend-section .content-grid .content-item .content-info {
  padding: 8px;
}
.recommend-section .content-grid .content-item .content-info .content-title {
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 4px;
}
.recommend-section .content-grid .content-item .content-info .content-desc {
  font-size: 12px;
  color: #666;
}

